<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.somsom.cyworld.post.photoAlbum.Review.dao.ReviewDAO">
 
 	<!-- 사진첩 댓글 작성 -->
 	<insert id="insertReview" parameterType="map">
 		INSERT INTO `photoAlbumReview`
 		(
 			`userId`
 			, `userName`
 			, `targetUserId`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userName}
 			, #{targetUserId}
 			, #{content}
 			, now()
 			, now()
 		)
 	</insert>
 
	 <!-- 사진첩 댓글 리스트 가져오기 -->
	<select id="selectPhotoAlbumReview" parameterType="int" 
 	resultType="com.somsom.cyworld.post.photoAlbum.Review.model.PhotoAlbumReview">
 		SELECT 
			`id`
			, `userId`
 			, `userName`
 			, `targetUserId`
 			, `content`
 			, `createdAt`
 			, `updatedAt
		FROM
			`photoAlbumReview`
		WHERE
			`targetUserId` = #{targetUserId}
 	</select>	
 </mapper>